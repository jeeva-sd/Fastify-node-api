{
  "name": "node-api",
  "version": "1.0.0",
  "description": "A well-organized and maintainable Node.js API",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "format": "eslint --fix .",
    "db:drop": "cross-env NODE_ENV=dev drizzle-kit drop",
    "db:studio": "cross-env NODE_ENV=dev drizzle-kit studio",
    "db:check": "cross-env NODE_ENV=dev drizzle-kit check:mysql",
    "db:generate": "cross-env NODE_ENV=dev drizzle-kit generate:mysql",
    "db:introspect": "cross-env NODE_ENV=dev drizzle-kit introspect:mysql",
    "db:migrate": "cross-env NODE_ENV=dev ts-node -r tsconfig-paths/register ./src/database/sql/testDB/testDB.migrate.ts",
    "db:seed": "cross-env NODE_ENV=dev ts-node -r tsconfig-paths/register src/database/sql/testDB/testDB.seed.ts",
    "dev": "cross-env TS_NODE_BASEURL=./src NODE_ENV=dev nodemon --signal SIGHUP -r tsconfig-paths/register src/server/index.ts",
    "prod": "tsc && cross-env TS_NODE_BASEURL=./dist NODE_ENV=prod node -r tsconfig-paths/register dist/server/index.js"
  },
  "keywords": [],
  "author": "github.com/jeeva-sd",
  "license": "ISC",
  "engines": {
    "node": ">= 18.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/multipart": "^8.2.0",
    "@fastify/static": "^7.0.1",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.4",
    "fastify": "^4.26.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.2",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.10.2",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "pino-pretty": "^10.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}