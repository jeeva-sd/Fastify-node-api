{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": [
			"es6"
		],
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"resolveJsonModule": true,
		"baseUrl": "./src",
		"outDir": "./dist",
		"paths": {
			"~/*": [
				"*"
			]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}